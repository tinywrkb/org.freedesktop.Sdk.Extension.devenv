set editing-mode vi
set show-mode-in-prompt on

set vi-ins-mode-string "\1\e[97m\e[48;5;2m\2+\1\e[0m\2"
set vi-cmd-mode-string "\1\e[97m\e[48;5;1m\2:\1\e[0m\2"

# ctrl+arrows
"\e[1;5C": forward-word
"\e[1;5D": backward-word

# ctrl+backspace / ctrl+h
"\b": backward-kill-word

# ctrl+delete
"\033[3;5~": kill-word
